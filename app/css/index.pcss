:root {
  --textColor: #333;
  --mainColor1: #fdf4eb;
  --mainColor2: #fff;
  --mainColor3: #ffffcd;
}

* {
  border: 0;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  &.color-1 {
    background-color: var(--mainColor1);
  }
  &.color-2 {
    background-color: var(--mainColor2);
  }
  &.color-3 {
    background-color: var(--mainColor3);
  }
  transition: background .25s linear;

}

.swiper-container {
  width: 100%;
  height: 100vh;
}